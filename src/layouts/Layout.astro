---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Solution Architecture by Jitan Gupta</title>
		<meta name="description" content="Solution Architecture demos and insights by Jitan Gupta" />
		<meta name="author" content="Jitan Gupta" />
	</head>
	<body>
		<header class="header">
			<nav class="nav">
				<div class="logo">
					<h2 style="margin: 0;">DemoDeck</h2>
					<p style="color: var(--text-secondary); margin-top: 0.25rem;">Solution Architecture by Jitan Gupta</p>
				</div>
				<div class="social-links" style="margin: 0;">
					<a href="https://youtube.com/@jitangupta" class="link" target="_blank" rel="noopener noreferrer">
						YouTube
					</a>
					<a href="https://linkedin.com/in/jitangupta" class="link" target="_blank" rel="noopener noreferrer">
						LinkedIn
					</a>
					<a href="https://jitangupta.com" class="link" target="_blank" rel="noopener noreferrer">
						Website
					</a>
				</div>
			</nav>
		</header>
		<main class="container">
			<slot />
		</main>
		<style is:global>
			@import '../styles/global.css';

			.social-links a {
				display: flex;
				align-items: center;
			}
		</style>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
